{% block body %}
    <header>
        <h1>Contact NewsBlog</h1>
    </header>

    <p>Want to contact NewsBlog?</p>

  {{ form_start(form, { 'action': path('UserNewsBundle_contact'), 'method': 'POST', 'attr': {'class': 'blogger'} }) }}
